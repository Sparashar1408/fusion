<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            tools:context=".activities.GroupSettingActivity">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/iv_back" />

                <TextView
                    android:id="@+id/tv_setting"
                    style="@style/txt_style_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/group_setting"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                style="@style/txt_style_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:text="@string/fusion_group_name"
                android:textStyle="bold" />

            <EditText
                style="@style/txt_style_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:inputType="text"
                android:singleLine="true"
                android:text="SouthSide Moms"
                android:textColor="@color/Black" />

            <View
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:layout_marginTop="5dp"
                android:background="@color/app_dark_grey" />

            <TextView
                style="@style/txt_style_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/description"
                android:textStyle="bold" />

            <EditText
                style="@style/txt_style_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:inputType="text"
                android:singleLine="true"
                android:text="We are in a instrument band"
                android:textColor="@color/Black" />

            <View
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:layout_marginTop="5dp"
                android:background="@color/app_dark_grey" />

            <TextView
                style="@style/txt_style_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:text="33/50" />

            <TextView
                style="@style/txt_style_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:text="@string/fusion_color"

                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_colors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:layout_marginTop="5dp"
                android:background="@color/app_dark_grey" />

            <TextView
                style="@style/txt_style_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/privacy"

                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:elevation="5dp"
                        app:cardBackgroundColor="@color/White"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="5dp">

                            <ImageView
                                android:id="@+id/iv"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/iv_lock" />

                            <TextView
                                style="@style/txt_style_black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_toRightOf="@id/iv"
                                android:paddingRight="20dp"
                                android:shadowColor="#333333"
                                android:shadowDx="1"
                                android:shadowDy="1"
                                android:shadowRadius="1"
                                android:text="Only Admin"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/iv_unselect" />

                            <TextView
                                style="@style/txt_style_black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/iv"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="10dp"
                                android:text="Only the selected group will be able to view this showing."
                                android:textSize="14sp" />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:elevation="5dp"
                        app:cardBackgroundColor="@color/White"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="5dp">

                            <ImageView
                                android:id="@+id/iv2"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/iv_profile_menu" />

                            <TextView
                                style="@style/txt_style_black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_toRightOf="@id/iv2"
                                android:paddingRight="20dp"
                                android:shadowColor="#333333"
                                android:shadowDx="1"
                                android:shadowDy="1"
                                android:shadowRadius="1"
                                android:text="All Friends"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/iv_unselect" />

                            <TextView
                                style="@style/txt_style_black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/iv2"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="10dp"
                                android:text="Only the selected group will be able to view this showing."
                                android:textSize="14sp" />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:elevation="5dp"
                        app:cardBackgroundColor="@color/White"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="5dp">

                            <ImageView
                                android:id="@+id/iv3"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@mipmap/iv_profile" />

                            <TextView
                                style="@style/txt_style_black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_toRightOf="@id/iv3"
                                android:paddingRight="20dp"
                                android:shadowColor="#333333"
                                android:shadowDx="1"
                                android:shadowDy="1"
                                android:shadowRadius="1"
                                android:text="Everyone"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/iv_unselect" />

                            <TextView
                                style="@style/txt_style_black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/iv3"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="10dp"
                                android:text="Only the selected group will be able to view this showing."
                                android:textSize="14sp" />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:elevation="5dp"
                        app:cardBackgroundColor="@color/app_dark_grey"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="5dp">

                            <ImageView
                                android:id="@+id/iv4"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/iv_profile_menu" />

                            <TextView
                                style="@style/txt_style_black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_toRightOf="@id/iv4"
                                android:text="Custom"
                                android:textColor="@color/White"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/iv_unselect" />

                            <TextView
                                style="@style/txt_style_black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/iv4"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="10dp"
                                android:text="Set custom permission for your fusion."
                                android:textColor="@color/White"
                                android:textSize="14sp" />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:layout_marginTop="5dp"
                android:background="@color/app_dark_grey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    style="@style/txt_style_grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/notification"
                    android:textStyle="bold" />

                <com.github.angads25.toggle.LabeledSwitch
                    android:id="@+id/switch4"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    app:colorBorder="@color/app_purple"
                    app:colorOn="@color/app_purple"
                    app:on="true"
                    app:textOff=""
                    app:textOn="" />

                <TextView
                    style="@style/txt_style_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:text="Notification when a member fuses" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:background="@color/app_dark_grey" />

        </LinearLayout>
    </ScrollView>
</layout>
