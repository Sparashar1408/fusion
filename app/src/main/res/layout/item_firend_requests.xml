<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:padding="8dp">

    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/iv_user" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/iv_profile"
        android:orientation="vertical">

        <TextView
            style="@style/txt_style_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maya Brady"
            android:textStyle="bold" />

        <TextView
            style="@style/txt_style_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Sent a message to the fusion"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/ll_accept_decline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="2">

            <Button
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/blue_round_bg"
                android:text="Accept" />

            <Button
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/blue_round_bg"
                android:backgroundTint="@color/app_dark_grey"
                android:text="Decline" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>